<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <form method="post">
  <!-- Email input -->
  <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign In</p>
  <div class="form-outline mb-4" style=" margin-top: 5%; margin-left: 40%;">
    <label class="form-label" asp-for="username" for="form2Example1">Username</label>
    <input type="text" asp-for="username" style="width: 35%" id="form2Example1" placeholder="Username" class="form-control" />
  </div>

  <!-- Password input -->
  <div class="form-outline mb-4" style=" margin-top: 2%; margin-left: 40%;">
    <label class="form-label" asp-for="password" for="form2Example2">Password</label>
    <input type="password" asp-for="password" style="width: 35%" id="form2Example2" placeholder="Password" class="form-control" />
  </div>
  <p style="color: rgb(83, 4, 4); margin-left: 40%;">@ViewBag.Message</p>
  <!-- 2 column grid layout for inline styling -->
  <div class="row mb-4" style="margin-left: 40%;">
    <div class="row d-flex justify-content-center">
      <!-- Checkbox -->
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
        <label class="form-check-label" for="form2Example31"> Remember me </label>
      </div>
     
    </div>
    <br><br>
    <div class="col">
      <!-- Simple link -->
      <a asp-controller="Home" asp-action="ForgotPassword">Forgot password?</a>
    </div>
  </div>

  <!-- Submit button -->
  <button type="submit" style="margin-left: 45%;" class="btn btn-primary btn-block mb-4">Sign in</button>
  
  <!-- Register buttons -->
  <div class="text-center">
    <a asp-area="" asp-controller="Home" asp-action="SignUp">Don't Have an account SignUp here!</a>
  </div>

</form>
</body>
</html>